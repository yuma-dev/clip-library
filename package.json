{
  "name": "clips",
  "displayName": "Clips",
  "version": "1.6.0",
  "description": "A simple clipping gallery as a replacement for Steelseries Moments. Use it with any other clipping program.",
  "author": "yuma-dev",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "build": {
    "appId": "com.yuma-dev.clips",
    "productName": "Clips",
    "files": [
      "assets/**/*",
      "*.js",
      "*.html",
      "*.css",
      "icon.ico"
    ],
    "extraResources": [
      {
        "from": "ffmpeg-bin",
        "to": "ffmpeg-bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "chokidar": "^3.6.0",
    "custom-electron-titlebar": "^4.2.8",
    "discord-rpc": "^4.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "readify": "^10.0.0",
    "semver": "^7.6.3"
  }
}
